@model IEnumerable<Category>
@{
    ViewData["Title"] = "Categories";
}

<h1>Categories</h1>
<h5>
    A category helps us to see where we spend our money,
    also where do our incomes come from.
</h5>

<a class="btn btn-success" asp-action="Create">Create new Category</a>

<table class="table">
    <thead>
        <th>Actions</th>
        <th>Name</th>
        <th>Type</th>
    </thead>
    <tbody>
        @foreach(var category in Model)
        {
            <tr>
                <td>
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@category.Id">Edit</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@category.Id">Delete</a>
                </td>
                <td>
                    @category.Name
                </td>
                <td>
                    @category.TransactionTypeId.ToString()
                </td>
            </tr>
        }
    </tbody>
</table>