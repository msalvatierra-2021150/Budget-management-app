@model AccountTypes

@{
    ViewData["Title"] = "Create";
}
<h1>Create a new Account Type</h1>
<h5>The Account type refers how we can group account, such as: Credit Cards, Loans, etc.</h5>
<form asp-controller="AccountTypes" asp-action="Create">
    <div class="mb-3">
        <label class="form-label" asp-for="Name"></label>
        <input type="text" class="form-control" asp-for="Name" name="Name">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
    <a class="btn btn-secondary" asp-action="Index">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}