@model AccountsCreationViewModel

@{
    ViewData["Title"] = "Create Account";
}

<div class="container">
    <h1>Accounts</h1>
    <h5>The account refers to distinct balances that you have: Credit card, Savings account, Loans, etc.</h5>
    <form asp-controller="Accounts" asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="AccountTypeId" class="form-label"></label>
            <select asp-for="AccountTypeId" asp-items="Model.AccountTypes" class="form-select">
                <option value="">Select Account Type</option> <!-- Add a default option -->
            </select>
            <span asp-validation-for="AccountTypeId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Balance" class="form-label"></label>
            <input type="number" asp-for="Balance" class="form-control" />
            <span asp-validation-for="Balance" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Create Account</button>
    </form>
</div>

